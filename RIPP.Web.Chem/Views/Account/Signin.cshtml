@{
    ViewBag.Title = "用户登录";
    Layout = "~/Views/Shared/_LayoutFront.cshtml";
}
@model RIPP.Web.Chem.Models.LogOnModel
<link rel="stylesheet" href="/css/compiled/signin.css" type="text/css" media="screen" />
<script type="text/javascript">
    $(function () {
        //$(".registerform").Validform();  //就这一行代码！;
        $("form").Validform({
            tiptype: 2,
            callback: function (form) {
                if (window.parent != null)
                    parent.login($('#UserName').val(), $('#Password').val());
                alert('ddd');
            }
        });
        
    })
    aaa = 0;
</script>
@using (Html.BeginForm())
{
  
    <div class="login-wrapper">
        <br />
        <br />
        <br />
        <div class="box">
            <div class="content-wrap form-horizontal">
                <h6>登录</h6>
                @if (ViewBag.Msg != null)
                {
                    <p class="alert alert-danger">
                        @Html.Raw(ViewBag.Msg)
                    </p>
                }
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", datatype = "e|m", errormsg = "邮箱或手机号", placeholder = "邮箱或手机号" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", datatype = "*6-18", errormsg = "密码至少6个字符,最多18个字符！", placeholder = "密码" })
                <a href="/Account/FindPassword" class="forgot">忘记密码了?</a>
                <div class="remember">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    <label for="RememberMe">记住我</label>
                </div>
                <button class="btn-glow primary login">马上登录</button>
            </div>
        </div>

        <div class="no-account">
            <p>我还没有账号，</p>
            <a href="/account/signup">马上注册</a> 
        </div>
    </div>
}


<div class="clearfix" style="clear: both; height: 500px;"></div>
