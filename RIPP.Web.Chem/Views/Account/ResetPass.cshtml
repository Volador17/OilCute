@{
    ViewBag.Title = "ResetPass";
    Layout = "~/Views/Shared/_LayoutFront.cshtml";
}
<link rel="stylesheet" href="/css/compiled/signin.css" type="text/css" media="screen" />
<script type="text/javascript">
    $(function () {
        //$(".registerform").Validform();  //就这一行代码！;
        $("form").Validform({
            tiptype: 2
        });
    })
</script>
@using (Html.BeginForm("ResetPass", "Account"))
{
  
    <div class="login-wrapper">
        <br />
        <br />
        <br />
        <div class="box">
            <div class="content-wrap">
                <h6>找回密码</h6>
                @if (ViewBag.Msg != null)
                {
                    <p class="alert alert-danger">
                        @Html.Raw(ViewBag.Msg)
                    </p>
                }
                @if (ViewBag.allowChange == true)
                {
                    <div class="row">
                        <div class="col-md-6">
                            <input class="form-control" type="password" name="password" id="password" placeholder="密码" plugin="passwordStrength" datatype="*6-18" nullmsg="请输入密码！" errormsg="密码至少6个字符,最多18个字符！" />
                        </div>
                        <div class="col-md-6" style="text-align: left;"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <input class="form-control" type="password" name="repassword" id="repassword" placeholder="重复输入密码" recheck ="password" datatype="*6-18" nullmsg="请再次输入密码！" errormsg="两次输入的密码不一致！" />
                           
                        </div>
                        <div class="col-md-6" style="text-align: left;"></div>
                    </div>

                    <button class="btn-glow primary login">提交</button>
                }
            </div>
        </div>

        <div class="no-account">
            <p>我还没有账号，</p>
            <a href="/account/signup">马上注册</a>
            <br />
            <p>我是校内用户,马上用</p>
            <a href="/account/CASSignin">校内账户登录</a>
        </div>
    </div>
}


<div class="clearfix" style="clear: both; height: 500px;"></div>
