@{
    ViewBag.Title = "用户个人信息";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model RIPP.Web.Chem.Datas.S_User
@using RIPP.Web.Chem.Helpers
<script src="/js/raphael-min.js"></script>
<script src="/js/morris.min.js"></script>
<link rel="stylesheet" href="/css/compiled/chart-showcase.css" type="text/css" media="screen" />
<link href="/css/lib/morris.css" type="text/css" rel="stylesheet" />
<div class="content">
    <div id="pad-wrapper">
        <div class="row header">
            <h3>用户个人信息</h3>
            <div class="col-md-10 col-sm-12 col-xs-12 pull-right">

                <a href="/Admin/Users/Edit" class="btn-flat success pull-right">
                    <span>+</span>
                    修改个人信息
                </a>
            </div>
        </div>

        @if (Model == null)
        {
            @:用户信息不存在
 }
        else
        {          
            <div class="row">
                    <dl class="dl-horizontal">
                       
                        <dt>邮箱</dt>
                        <dd>@Model.Email</dd>
                        <dt>真实名</dt>
                        <dd>@Model.RealName</dd>
                        
                        
                        <dt>手机号</dt>
                        <dd>@Model.PhoneCell</dd>

                        <dt>单位</dt>
                        <dd>@(Model.Group!=null?Model.Group.Names:"")</dd>
                        
                        <dt>办公室电话</dt>
                        <dd>@Model.PhoneOffice</dd>

                        <dt>工作地点</dt>
                        <dd>@Model.Address</dd>

                        <dt>角色</dt>
                        <dd>@Model.RolesString</dd>
                        <dt>备注</dt>
                        <dd>@Model.Remark</dd>
                    </dl>
               
            </div>
        }
    </div>
</div>

